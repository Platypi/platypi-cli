{
    "compilerOptions": {
        "esModuleInterop": true,
        "module": "commonjs",
        "removeComments": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "strict": false,
        "strictPropertyInitialization": false,
        "target": "es2017"
    },
    "exclude": [
        "node_modules",
        "src/cli.d.ts",
        "src/generator/templates/**/*.ts"
    ],
    "include": ["src/**/*.ts", "test/**/*.ts"]
}
