{
  "name": "platypi-cli",
  "version": "0.2.0-beta.5",
  "description": "A command line interface for working with PlatypusTS projects.",
  "author": "Platypi <support@platypi.io>",
  "homepage": "https://platypi.io",
  "main": "src/index.js",
  "preferGlobal": true,
  "bin": {
    "platypi": "bin/platypi"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Platypi/platypi-cli.git"
  },
  "keywords": [
    "platypi",
    "platypusts",
    "typescript",
    "framework"
  ],
  "license": "GPL v3.0",
  "bugs": {
    "url": "https://github.com/Platypi/platypi-cli/issues"
  },
  "dependencies": {
    "chalk": "latest",
    "configstore": "^1.0.0",
    "es6-promise": "latest",
    "exit": "latest",
    "github": "latest",
    "inquirer": "latest",
    "lodash": "latest",
    "node-uuid": "latest",
    "pleasant-progress": "latest",
    "require-all": "^1.0.0",
    "resolve": "latest",
    "rimraf": "latest",
    "through": "latest"
  },
  "devDependencies": {
    "chai": "^2.3.0",
    "chai-as-promised": "^5.0.0",
    "glob": "^5.0.6",
    "istanbul": "^0.3.14",
    "mocha": "^2.2.5",
    "tsd": "next",
    "typescript": "1.5.0-alpha"
  },
  "scripts": {
    "build": "npm run build-src",
    "build-src": "tsc -p build/src",
    "build-test": "tsc -p build/test",
    "clean": "npm run clean-src && npm run clean-test",
    "clean-src": "rimraf src/**/*.js src/*.js",
    "clean-test": "rimraf test/unit/**/*.js test/*.js",
    "tsd": "npm run tsd-src && npm run tsd-test",
    "tsd-src": "tsd update -so --config tsd.src.json",
    "tsd-test": "tsd update -so --config tsd.test.json",
    "cli": "npm run build && node bin/platypi",
    "test": "npm run build-test && node test/runner",
    "test:debug": "npm run build-test && node debug test/runner",
    "test-all": "npm run build-test && node test/runner all",
    "test-all:debug": "npm run build-test && node debug test/runner all",
    "test-all:cover": "npm run build-test && istanbul cover --dir test/coverage -- test/runner.js all"
  }
}
